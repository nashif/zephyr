#
# ADC options
#
menuconfig ADC
	bool
	prompt "ADC drivers"
	default n
	help
	Enable ADC (Analog to Digital Converter) driver configuration

config  ADC_DEBUG
	bool "ADC drivers debug output"
	depends on ADC
	default n
	help
	Enable debug output for ADC drivers

config DW_ADC
	bool "ARC Designware Driver"
	depends on ADC && ARC
	default n
	help
	Enable the driver implementation of the Designware ADC IP.

choice
	prompt "Input Mode"
	depends on ADC
	default ADC_SINGLE_ENDED
	help
	ADC input mode: single ended or differential.

config ADC_SINGLE_ENDED
	bool "Single ended"

config ADC_DIFFERENTIAL
	bool "Differential"

endchoice

config ADC_INPUT_MODE
	int
	depends on ADC
	default 0 if ADC_SINGLE_ENDED
	default 1 if ADC_DIFFERENTIAL

choice
	prompt "Output Mode"
	depends on ADC
	default ADC_SERIAL
	help
	ADC output mode: parallel or serial.

config ADC_SERIAL
	bool "Serial"

config ADC_PARALLEL
	bool "Parallel"

endchoice

config ADC_OUTPUT_MODE
	int
	depends on ADC
	default 0 if ADC_SERIAL
	default 1 if ADC_PARALLEL

choice
	prompt "Sequence Mode"
	depends on ADC
	default ADC_SINGLESHOT
	help
	ADC sequence mode - single run/repetitive

config ADC_SINGLESHOT
	bool "Single Ended"

config ADC_REPETITIVE
	bool "Differential"

endchoice

config ADC_SEQ_MODE
	int
	depends on ADC
	default 0 if ADC_SINGLESHOT
	default 1 if ADC_REPETITIVE

choice
	prompt "Capture Mode"
	depends on ADC
	default ADC_RISING_EDGE
	help
	ADC controller capture mode:
	by rising or falling edge of adc_clk

config ADC_RISING_EDGE
	bool "Rising Edge"

config ADC_FALLING_EDGE
	bool "Falling Edge"

endchoice

config ADC_CAPTURE_MODE
	int
	depends on ADC
	default 0 if ADC_RISING_EDGE
	default 1 if ADC_FALLING_EDGE

choice
	prompt "Sample Width"
	depends on ADC
	default ADC_WIDTH_6_BIT
	help
	ADC sample width

config ADC_WIDTH_6_BIT
	bool "6 Bit Width"

config ADC_WIDTH_8_BIT
	bool "8 Bit Width"

config ADC_WIDTH_10_BIT
	bool "10 Bit Width"

config ADC_WIDTH_12_BIT
	bool "12 Bit Width"

endchoice

config ADC_WIDTH
	int
	depends on ADC
	default 0 if ADC_WIDTH_6_BIT
	default 1 if ADC_WIDTH_8_BIT
	default 2 if ADC_WIDTH_10_BIT
	default 3 if ADC_WIDTH_12_BIT

config ADC_SERIAL_DELAY
	int "Serial Delay"
	depends on ADC
	default 1
	help
	Number of ADC clock ticks that the first bit of
	the serial output is delayed after the conversion
	has started.

config ADC_CLOCK_RATIO
	int "Clock Ratio"
	depends on ADC
	default 1024
	help
	ADC Clock Ratio


config  ADC_TI_ADC108S102
	bool "TI adc108s102 chip driver"
	depends on ADC
	select SPI
	default n
	help
	Enable support for TI's ADC chip adc108s102 driver.

config  ADC_TI_ADC108S102_0
	bool "First instance of TI's adc108s102 chip"
	depends on ADC_TI_ADC108S102
	default n
	help
	Enalbe first instance of adc108s102 driver.

config  ADC_TI_ADC108S102_0_DRV_NAME
	string "Driver's name"
	depends on ADC_TI_ADC108S102_0
	default "adc108s102_0"

config  ADC_TI_ADC108S102_0_SPI_PORT_NAME
	string "Master SPI port name"
	depends on ADC_TI_ADC108S102_0
	default ""
	help
	Master SPI port name through which adc108s102 chip is accessed.

config  ADC_TI_ADC108S102_0_SPI_CONFIGURATION
	hex "Master SPI port configuration"
	depends on ADC_TI_ADC108S102_0
	default 0x0
	help
	Master SPI port configuration flags used to access adc108s102 chip.

config  ADC_TI_ADC108S102_0_SPI_MAX_FREQ
	int "Master SPI port max frequency"
	depends on ADC_TI_ADC108S102_0
	default 0
	help
	Master SPI port maximum frequency used to access adc108s102 chip.

config  ADC_TI_ADC108S102_0_SPI_SLAVE
	int "SPI slave slot"
	depends on ADC_TI_ADC108S102_0
	default 0
	help
	adc108s102 chip's SPI slave number on master SPI port.
