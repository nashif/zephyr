config PLATFORM
        string
        default quark_se-x86
        help
        This option holds the directory name used by the build system to locate
        the correct linker file.

choice
        prompt "Board Type"
        depends on PLATFORM_QUARK_SE_X86
        default BOARD_CTB

        config BOARD_CTB
        bool "CTB - Curie Platform"

        config BOARD_APP
        bool "APP - Quark SE Platform"

        config BOARD_AAE
        bool "AAE - Quark SE AtlasEdge"
endchoice

config  LOAPIC_TIMER_FREQ
        default 32000000

config	SYS_CLOCK_HW_CYCLES_PER_SEC
	default 32000000

config  PHYS_LOAD_ADDR
	default 0x40030000 if XIP
	default 0xA8000000 if !XIP

config IOAPIC_NUM_RTES
	default 64

config LOAPIC_TIMER_IRQ
	default 64

config PINMUX
        default y

if PINMUX
config PINMUX_BASE
        default 0xB0800930

config PINMUX_NUM_PINS
	default 69
endif

config DW_AIO_COMPARATOR_BASE_ADDR
	hex
	depends on DW_AIO_COMPARATOR
	default 0xb0800300

config ARC_INIT
	bool "Quark SE ARC Kickoff"
	default n
	help
	Allows x86 processor to kickoff the ARC slave processor.

config ARC_INIT_DEBUG
	bool "Allows the usage of GDB with the ARC processor."
	depends on ARC_INIT
	default n
	help
	This option will stop the master processor from kicking-off
	the ARC slave processor. This will allow GDB to halt an
	engage the ARC processor.

if GPIO_DW
config GPIO_DW_0_BASE_ADDR
	default 0xB0000C00
config GPIO_DW_0_IRQ
	default 8

config GPIO_DW_1_BASE_ADDR
	default 0xB0001700
config GPIO_DW_1_IRQ
	default 8

endif

if I2C_DW
config I2C_DW_0
        default y

config I2C_DW_0_BASE
        default 0xb0002800

config I2C_DW_0_NAME
        default "I2C0"

config I2C_DW_0_INT_PRIORITY
        default 0

config I2C_DW_1
        default y

config I2C_DW_1_BASE
        default 0xb0002c00

config I2C_DW_1_NAME
        default "I2C1"

config I2C_DW_1_INT_PRIORITY
        default 0
endif

if CLOCK_CONTROL_QUARK_SE

config  CLOCK_CONTROL_QUARK_SE_PERIPHERAL
       default n

config  CLOCK_CONTROL_QUARK_SE_PERIPHERAL_DRV_NAME
       default "clk_peripheral"

config  CLOCK_CONTROL_QUARK_SE_EXTERNAL
       default n

config  CLOCK_CONTROL_QUARK_SE_EXTERNAL_DRV_NAME
       default "clk_external"

config  CLOCK_CONTROL_QUARK_SE_SENSOR
       default n

config  CLOCK_CONTROL_QUARK_SE_SENSOR_DRV_NAME
       default "clk_sensor"
endif
