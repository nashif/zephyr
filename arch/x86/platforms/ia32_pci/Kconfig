config PLATFORM
	string
	default ia32_pci
	help
	This option holds the directory name used by the build system to locate
	the correct linker file.

config PHYS_LOAD_ADDR
	default 0x00100000

config SYS_CLOCK_HW_CYCLES_PER_SEC
	default 150000000 if LOAPIC_TIMER
	default 25000000  if HPET_TIMER

config UART_CONSOLE_INDEX
	default 1

menu "I2C drivers"

config DW_I2C0
        bool "Enable I2C0"
        default n
        select DW_I2C

config DW_I2C0_BASE
        hex "Base addres for I2C0"
        default 0x00000000
        depends on DW_I2C0

config DW_I2C0_NAME
        string "Select a name for finding the device"
        depends on DW_I2C0
        default "I2C0"

config DW_I2C0_IRQ
	int "Controller interrupt"
	depends on DW_I2C0
	default 0

config DW_I2C0_INT_PRIORITY
        int "Controller interrupt priority"
        depends on DW_I2C0
        default 0
        help
        IRQ priority

choice
depends on DW_I2C0
prompt "I2C0 IRQ Trigger Condition"
default DW_I2C0_IRQ_RISING_EDGE

config DW_I2C0_IRQ_FALLING_EDGE
	bool "Falling Edge"
	help
	  This option signifies that the I2C0 uses falling edge interrupt.

config DW_I2C0_IRQ_RISING_EDGE
	bool "Rising Edge"
	help
	  This option signifies that the I2C0 uses rising edge interrupt.

config DW_I2C0_IRQ_LEVEL_HIGH
	bool "Level High"
	help
	  This option signifies that the I2C0 uses level high interrupt.

config DW_I2C0_IRQ_LEVEL_LOW
	bool "Level Low"
	help
	This option signifies that the I2C0 uses level low interrupt.

endchoice

config DW_I2C0_BUS
	int "PCI Bus number"
	depends on DW_I2C0 && PCI
	default 0

config DW_I2C0_DEV
	int "PCI device number"
	depends on DW_I2C0 && PCI
	default 21

config DW_I2C0_FUNCTION
	int "PCI function number"
	depends on DW_I2C0 && PCI
	default 2

config DW_I2C0_BAR
	int "PCI BAR number"
	depends on DW_I2C0 && PCI
	default 0

endmenu
