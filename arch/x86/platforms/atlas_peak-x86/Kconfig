config PLATFORM
        string
        default atlas_peak-x86
        help
        This option holds the directory name used by the build system to locate
        the correct linker file.

choice
        prompt "Board Type"
        depends on PLATFORM_ATLASPEAK_X86
        default BOARD_CTB

        config BOARD_CTB
        bool "CTB - Curie Platform"

        config BOARD_APP
        bool "APP - Atlas Peak Platform"

        config BOARD_AAE
        bool "AAE - AtlasPeak AtlasEdge"
endchoice

config  LOAPIC_TIMER_FREQ
        default 32000000

config	SYS_CLOCK_HW_CYCLES_PER_SEC
	default 32000000

config  PHYS_LOAD_ADDR
	default 0x40030000 if XIP
	default 0xA8000000 if !XIP

config IOAPIC_NUM_RTES
	default 64

config LOAPIC_TIMER_IRQ
	default 64

config PINMUX_BASE
        default 0xB0800930
	depends on PINMUX

config PINMUX_NUM_PINS
	default 69
	depends on PINMUX

config DW_AIO_COMPARATOR_BASE_ADDR
	hex
	depends on DW_AIO_COMPARATOR
	default 0xb0800300

config ARC_INIT
	bool "Atlas Peak ARC Kickoff"
	default n
	help
	Allows x86 processor to kickoff the ARC slave processor.

config ARC_INIT_DEBUG
	bool "Allows the usage of GDB with the ARC processor."
	depends on ARC_INIT
	default n
	help
	This option will stop the master processor from kicking-off
	the ARC slave processor. This will allow GDB to halt an
	engage the ARC processor.

menu "Platform clocking"
config  CLOCK_CONTROL_ATP
	bool
	prompt "AtlasPeak Clock controller support"
	depends on CLOCK_CONTROL && PLATFORM_ATLASPEAK_X86
	default n
	help
	  Enable support for the AtlasPeak clock driver.

config  CLOCK_CONTROL_ATP_PERIPHERAL
	bool
	prompt "AtlasPeak peripheral clock support"
	depends on CLOCK_CONTROL_ATP
	default n
	help
	  Enable support for AtlasPeak peripheral clock which controls the
	  clock of ATP's I2C, SPI, GPIO controllers and more.

config  CLOCK_CONTROL_ATP_PERIPHERAL_DRV_NAME
	string
	prompt "AtlasPeak peripheral clock device name"
	depends on CLOCK_CONTROL_ATP_PERIPHERAL
	default "atp_clock_peripheral"

config  CLOCK_CONTROL_ATP_EXTERNAL
	bool
	prompt "AtlasPeak external clock support"
	depends on CLOCK_CONTROL_ATP
	default n
	help
	  Enable support for AtlasPeak external sub-system clock.

config  CLOCK_CONTROL_ATP_EXTERNAL_DRV_NAME
	string
	prompt "AtlasPeak external clock device name"
	depends on CLOCK_CONTROL_ATP_PERIPHERAL
	default "atp_clock_external"

config  CLOCK_CONTROL_ATP_SENSOR
	bool
	prompt "AtlasPeak sensor clock support"
	depends on CLOCK_CONTROL_ATP
	default n
	help
	  Enable support for AtlasPeak sensor sub-system clock.

config  CLOCK_CONTROL_ATP_SENSOR_DRV_NAME
	string
	prompt "AtlasPeak sensor clock device name"
	depends on CLOCK_CONTROL_ATP_PERIPHERAL
	default "atp_clock_sensor"

endmenu
